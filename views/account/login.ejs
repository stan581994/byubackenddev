<div class="login-container">
    <h1><%= title %></h1>

    <% if (typeof notice !== 'undefined') { %>
      <p class="flash-message-error"><%= notice %></p>
    <% } %>
  
  

    <form id="loginForm" action="/account/login" method="POST">
      <label for="email">Email:</label>
      <input type="email" id="email" name="account_email" required>
      <label for="password">Password:</label>
      <input type="password" id="password" name="account_password" required>
      <button type="submit">Login</button>
    </form> 

    <p>
      Don't have an account? <a href="/account/register">Register here</a>
    </p>
  </div>